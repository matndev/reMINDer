{
  "manifest_version": 3,
  "name": "AI Conversation Highlighter",
  "version": "1.0",
  "description": "Save important parts of AI conversations",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
		"https://grok.com/*",
		"https://chatgpt.com/*",
		"https://claude.ai/*"
	  ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}